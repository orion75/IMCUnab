<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".AddRegistroActivity">



    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:max="100"
        android:backgroundTint="@color/white"
        android:indeterminateTint="#1a09d6"
        android:layout_marginTop="-7dp"/>
    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textAlignment="center"
        style="@style/TextAppearance.MaterialComponents.Headline4"/>
    <TextView
        android:id="@+id/usuarioLabel"
        android:layout_width="match_parent"
        android:layout_below="@id/titleLabel"
        android:layout_height="wrap_content"
        android:text="Nombres y Apellidos"
        android:textAlignment="center"
        style="@style/TextAppearance.MaterialComponents.Headline6"/>

    <!--Fecha-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fechaLayout"
        android:layout_width="match_parent"
        android:layout_below="@id/usuarioLabel"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/fechaEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="false"
            android:hint="Fecha"
            android:inputType="datetime" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--Fecha-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/estaturaLayout"
        android:layout_width="match_parent"
        android:layout_below="@id/fechaLayout"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/estaturaEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estatura (Cm)"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pesoLayout"
        android:layout_width="match_parent"
        android:layout_below="@id/estaturaLayout"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/pesoEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Peso (Kg)"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/imcLabel"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pesoLayout"
        android:layout_marginTop="10dp"
        android:text=""
        android:textAlignment="center" />
    <TextView
        android:id="@+id/resultLabel"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imcLabel"
        android:layout_marginTop="10dp"
        android:text=""
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/calcularButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calcular" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <Button
            android:id="@+id/cancelarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar" />
    </LinearLayout>



</RelativeLayout>